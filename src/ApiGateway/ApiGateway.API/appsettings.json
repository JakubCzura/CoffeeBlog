  "ApiGateway": {
    "Routes": {
      "ArticleManagerRoute": {
        "ClusterId": "ArticleManagerCluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "article-manager/v{version}/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/v{version}/{**catch-all}"
          }
        ]
      },
      "AuthServiceRoute": {
        "ClusterId": "AuthServiceCluster",
        "AuthorizationPolicy": "default",
