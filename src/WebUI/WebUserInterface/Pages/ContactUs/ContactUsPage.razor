@page "/contact-us"

<PageTitle>Contact Us</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-5">
    <MudText Typo="Typo.h3" Align="Align.Center" Class="mb-4">Contact Us</MudText>
    <MudText Typo="Typo.body1" Align="Align.Center" Class="mb-6">
        Have a question, suggestion, or just want to share your love for coffee? We'd love to hear from you! Fill out the form below and let's connect.
    </MudText>

    <MudForm @ref="contactUsForm" Model="contactUsCommand" Validation="@(contactUsCommandValidator.ValidateValue)" Class="gap-2">
        <MudTextField @bind-Value="contactUsCommand.Name"
                      Label="Name"
                      For="@(() => contactUsCommand.Name)"
                      Variant="Variant.Outlined" />

        <MudTextField @bind-Value="contactUsCommand.Surname"
                      Label="Surname"
                      For="@(() => contactUsCommand.Surname)"
                      Variant="Variant.Outlined" />

        <MudTextField @bind-Value="contactUsCommand.Email"
                      Label="Email"
                      For="@(() => contactUsCommand.Email)"
                      InputType="InputType.Email"
                      InputMode="InputMode.email"
                      Variant="Variant.Outlined" />

        <MudTextField @bind-Value="contactUsCommand.Message"
                      Label="Message"
                      For="@(() => contactUsCommand.Message)"
                      Variant="Variant.Outlined" />

        <MudButton OnClick="Submit"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   Disabled="isProcessing">
            Send Message
        </MudButton>
    </MudForm>

    @if (!string.IsNullOrEmpty(resultMessage))
    {
        <MudAlert Severity="Severity.Success" Class="mt-4">@resultMessage</MudAlert>
    }
</MudContainer>