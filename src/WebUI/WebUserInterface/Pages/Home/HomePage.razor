                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="3" Class="pa-4">
            <MudCard Elevation="2" Style="height: 100%;">
                <MudCardMedia Image="images/home/coffee-colombia.jpg" Height="200" />
                <MudCardContent>
                    <MudText Typo="Typo.h6">Colombian Supremo</MudText>
                    <MudText Typo="Typo.body2" Class="mb-2">Medium Roast</MudText>
                    <MudText Typo="Typo.body2">
                        Well-balanced with a silky body, caramel sweetness, and hints of toasted nuts and dark chocolate.
                    </MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="@(() => NavigationManager.NavigateTo("/coffee-shop/colombian-supremo"))">Learn More</MudButton>
