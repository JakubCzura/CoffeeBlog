@page "/"
@using WebUserInterface.Components.Common.Carousels
@inject NavigationManager NavigationManager

<PageTitle>Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-5">

    <MudCarousel Class="mud-width-full rounded" Style="height:400px;" ShowArrows="true" ShowBullets="true" EnableSwipeGesture="true" AutoCycle="true" TData="object">
        <Carousel BackgroundImage="images/carousel/coffee-future-3.jpg" Title="Kawa nie tylko pyszna, ale i zdrowa" Date="24 marca 2025" Author="Jakub Czura" Description="Czytaj wpis" />
        <Carousel BackgroundImage="images/carousel/coffee-future-2.jpg" Title="Najpopularniejsze rodzaje kawy" Date="24 marca 2025" Author="Jakub Czura" Description="Czytaj wpis" />
        <Carousel BackgroundImage="images/carousel/coffee-future-4.jpg" Title="Gatunki ziaren kawowych" Date="24 marca 2025" Author="Jakub Czura" Description="Czytaj wpis" />
    </MudCarousel>

    <MudPaper Elevation="0" Class="d-flex flex-column align-center justify-center py-10 px-4 mt-8" Style="background-color: #f9f5f0;">
        <MudText Typo="Typo.h3" Align="Align.Center" Class="mb-4">Welcome to CoffeeBlog</MudText>
        <MudText Typo="Typo.body1" Align="Align.Center" Class="mb-6" Style="max-width: 800px;">
            Your ultimate destination for everything coffee - from bean to cup. We're passionate coffee enthusiasts who roast our own beans,
            share brewing knowledge, and celebrate coffee culture in all its forms.
        </MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Href="about-us">
            Discover Our Story
        </MudButton>
    </MudPaper>

    <MudGrid Class="mt-10">
        <MudItem xs="12" md="6" Class="d-flex align-center">
            <MudPaper Elevation="0" Class="pa-4">
                <MudText Typo="Typo.h5" Class="mb-4">Crafted with Passion</MudText>
                <MudText Typo="Typo.body1" Class="mb-4">
                    At the heart of CoffeeBlog is our artisanal roastery, where we transform carefully selected green beans into exceptional coffee.
                    Our master roasters use a combination of time-honored techniques and modern precision to develop unique flavor profiles that highlight
                    each bean's natural characteristics.
                </MudText>
                <MudText Typo="Typo.body1" Class="mb-4">
                    We source our beans directly from farmers in renowned coffee regions, ensuring fair compensation and sustainable practices.
                    Every batch is roasted in small quantities to maintain optimal freshness and flavor.
                </MudText>
                @* TODO: Implement coffee shop *@
                <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Href="coffee-shop">
                    Explore Our Coffees
                </MudButton>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudPaper Elevation="0" Class="p-md-5 d-flex justify-center">
                <MudImage Fluid="true" Src="images/home/roastery.jpg" Alt="Our coffee roastery" Class="rounded" />
            </MudPaper>
        </MudItem>
    </MudGrid>

