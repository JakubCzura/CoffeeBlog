{
  "ConnectionStrings": {
    "CoffeeBlogDbConnectionString": "Server=(localdb)\\MSSQLLocalDB;Database=CoffeeBlog;Integrated Security=True;TrustServerCertificate=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": "Warning",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "%appdata%/CoffeeBlog/logs/log-.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Authentication": {
    "Jwt": {
      "SecretKey": "99%%Gsdf@#fasdfa%#fas#@njda@3njd",
      "Issuer": "CoffeeBlog",
      "Audience": "CoffeeBlog",
      "LifetimeInMinutes": "10080" //one week
    }
  },
  "Email": {
    "Smtp": {
      "Host": "emailproviderhost.com",
      "Port": 587,
      "SecureSocketOptions": "StartTls"
    },
    "CoffeeBlog": {
      "SenderName": "CoffeeBlog",
      "Email": "coffeeblogemail@email.com",
      "Password": "verystrongpassword123"
    }
  },
  "PasswordHasher": {
    "Delimiter": ":",
    "KeySize": 64,
    "Iterations": 310000,
    "HashAlgorithmName": "SHA512"
  }
}
